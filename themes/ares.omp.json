{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#fbfbfb",
          "foreground": "#0077c2",
          "leading_diamond": "\u256d\u2500\ue0b2",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\uf179 ",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31b ",
            "windows": "\uf871 ",
            "wsl": "\ue712",
            "wsl_separator": " on "
          },
          "style": "diamond",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "type": "os"
        },
        {
          "background": "#fbfbfb",
          "foreground": "#0077c2",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_host": true
          },
          "style": "powerline",
          "template": "{{ .UserName }}<#000000>@</><#e06c75>{{ .HostName }}</> ",
          "type": "session"
        },
        {
          "background": "#e06c75",
          "foreground": "#fbfbfb",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue799\u2800",
          "type": "root"
        },
        {
          "background": "#0077c2",
          "foreground": "#fbfbfb",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_separator_icon": "/",
            "home_icon": "~",
            "max_depth": 2,
            "style": "full"
          },
          "style": "powerline",
          "template": " \ue5fe {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#fffb38",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#f17c37{{ end }}",
            "{{ if gt .Behind 0 }}#89d1dc{{ end }}"
          ],
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#242424",
          "foreground": "#45f179",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#cc2222{{ end }}"
          ],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " {{ if gt .Code 0 }}\uf659{{ else }}\uf633{{ end }} ",
          "type": "path"
        },
        {
          "background": "#242424",
          "foreground": "#45f179",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#cc2222{{ end }}"
          ],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": "{{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "background": "#1BD760",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "paused_icon": "\uf8e3 ",
            "playing_icon": "\ue602 ",
            "stopped_icon": "\uf04d "
          },
          "style": "powerline",
          "type": "spotify"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#d3d7cf",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "foreground": "#45f179",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#cc2222{{ end }}"
          ],
          "properties": {
            "time_format": "3:04 PM"
          },
          "style": "powerline",
          "template": " \uf017 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#0077c2",
          "style": "plain",
          "template": "\u276f<#e06c75>\u276f</>",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{.UserName}}@{{.HostName}} : {{.Folder}}",
  "final_space": true,
  "version": 2
}
