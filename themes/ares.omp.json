{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#ff6e6e",
          "background": "#21222c",
          "leading_diamond": "\ue0b2",
          "template": " {{ .Icon }} ",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\uf871"
          }
        },
        {
          "foreground": "#ff6e6e",
          "background": "#21222c",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_host": true
          },
          "style": "powerline",
          "template": "{{ .UserName }}<#f8f8f2>@{{ .HostName }}</> ",
          "type": "session"
        },
        {
          "foreground": "#21222c",
          "background": "#8be9fd",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#8be9fd{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#69ff94{{ end }}",
            "{{ if gt .Ahead 0 }}#f1fa8c{{ end }}",
            "{{ if gt .Behind 0 }}#f1fa8c{{ end }}"
          ],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_icon": "\ue725 "
          },
          "style": "powerline",
          "template": " {{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uf046 {{ .Staging.String }}</>{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "#69ff94",
          "background": "#3d3f52",
          "foreground_templates": ["{{ if gt .Code 0 }}#ff6e6e{{ end }}"],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " {{ if gt .Code 0 }}\uf659 {{ .FormattedMs }}{{ else }}\uf633 {{ .FormattedMs }}{{ end }} ",
          "type": "executiontime"
        },
        {
          "foreground": "#21222c",
          "background": "#69ff94",
          "powerline_symbol": "\ue0b0",
          "template": " {{ if ne .Status \"stopped\" }}\uf1bc {{ .Track }}{{ end }} ",
          "style": "powerline",
          "type": "spotify"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "template": "\u256d\u2500",
          "type": "text"
        },
        {
          "properties": {
            "time_format": "3:04 PM"
          },
          "style": "plain",
          "template": " \uf017 {{ .CurrentDate | date .Format }} |",
          "type": "time"
        },
        {
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2
}
